{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    "pnpm-workspace.yaml",
    "pnpm-lock.yaml",
    "package.json",
    ".npmrc",
    "turbo.json",
    "vitest.workspace.ts",
    ".editorconfig"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "TURBO_TOKEN",
    "TURBO_TEAM"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "TURBO_TOKEN",
    "TURBO_TEAM"
  ],
  "ui": "stream",
  "daemon": false,
  "tasks": {
    "lint": {
      "dependsOn": [],
      "inputs": [
        "src/**/*.{ts,js,vue,tsx,jsx}",
        "*.{ts,js,mjs}",
        "eslint.config.*",
        ".eslintrc.*",
        "package.json"
      ],
      "outputs": [
        ".eslintcache/**"
      ],
      "cache": true,
      "env": [
        "NODE_ENV"
      ],
      "passThroughEnv": [
        "ESLINT_USE_FLAT_CONFIG"
      ]
    },
    "type-check": {
      "dependsOn": [],
      "inputs": [
        "src/**/*.{ts,vue,tsx}",
        "*.ts",
        "tsconfig*.json",
        "package.json"
      ],
      "outputs": [
        ".tsbuildinfo",
        "dist/**/*.d.ts"
      ],
      "cache": true,
      "env": [
        "NODE_ENV"
      ]
    },
    "test": {
      "dependsOn": [],
      "inputs": [
        "src/**/*.{ts,js,vue,tsx,jsx}",
        "test/**/*.{ts,js,vue,tsx,jsx}",
        "*.{ts,js}",
        "tsconfig*.json",
        "vite.config.*",
        "vitest.config.*",
        "package.json"
      ],
      "outputs": [
        "test-results/**",
        "coverage/**",
        ".vitest/**"
      ],
      "cache": true,
      "env": [
        "NODE_ENV",
        "CI"
      ]
    },
    "build-c": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**/*.{ts,js,vue,tsx,jsx,css,scss,sass}",
        "*.{ts,js,mjs}",
        "package.json",
        "tsconfig*.json",
        "vite.config.*",
        "uno.config.*"
      ],
      "outputs": [
        "dist/**"
      ],
      "cache": true,
      "env": [
        "NODE_ENV"
      ]
    },
    "build-g": {
      "dependsOn": [
        "build-c"
      ],
      "inputs": [
        "__build-src__/**",
        "dist/**",
        "package.json"
      ],
      "outputs": [
        "dist/**"
      ],
      "cache": true,
      "env": [
        "NODE_ENV"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**/*.{ts,js,vue,tsx,jsx,css,scss,sass}",
        "*.{ts,js,mjs}",
        "package.json",
        "tsconfig*.json",
        "vite.config.*",
        "__build-src__/**",
        "uno.config.*",
        "tsdown.config.*"
      ],
      "outputs": [
        "dist/**",
        ".tsbuildinfo"
      ],
      "cache": true,
      "env": [
        "NODE_ENV"
      ]
    }
  }
}
