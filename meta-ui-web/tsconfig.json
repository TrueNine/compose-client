{
  "extends": "@compose/tsconfig/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "./imports-auto.d.ts",
      "./imports-comp.d.ts",
      "./env.d.ts"
    ],
    "allowImportingTsExtensions": false,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "*.d.ts",
    "uno.config.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "dist",
    "vitest.config.ts"
  ]
}
