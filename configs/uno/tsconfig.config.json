{
  "extends": [
    "@tsconfig/node22/tsconfig.json"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.config.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "node"
    ],
    "allowImportingTsExtensions": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true
  },
  "include": [
    "env.d.ts",
    "vite.config.*",
    "vitest.config.*",
    "uno.config.*",
    "tsdown.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*",
    "eslint.config.*"
  ]
}
